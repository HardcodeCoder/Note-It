<resources>

    <style name="SignInProviderBtn">
        <item name="android:layout_width">200dp</item>
        <item name="android:minWidth">148dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonBase">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button24dp" parent="ButtonBase">
        <item name="android:padding">12dp</item>
    </style>

    <style name="BottomMenuTheme">
        <item name="android:background">?surfaceColor</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_corners</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">?secondaryTextColor</item>
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
